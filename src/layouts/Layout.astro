---
import GlobalStyles from "../assets/styles/global.css";
import faBase from "../assets/font-awesome/css/fontawesome.css";
import faSolid from "../assets/font-awesome/css/solid.css";
import faBrands from "../assets/font-awesome/css/brands.css";
import profileImage from "../assets/images/wanrick.png";

interface Props {
	title: string;
}

const {title} = Astro.props;
---

<html lang="en" data-theme="cupcake">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Astro description"/>
		<meta name="generator" content={Astro.generator}/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href={GlobalStyles} />
		<link rel="stylesheet" href={faBase} />
		<link rel="stylesheet" href={faSolid} />
		<link rel="stylesheet" href={faBrands} />
		<title>{title}</title>
	</head>
	<body>
	<div class="h-full w-full grid grid-cols-4">
		<div class="h-full col-span-1 flex flex-col justify-center items-center bg-primary">
			<div class="avatar">
				<div class="w-48 rounded-full">
					<img src={profileImage.src} />
				</div>
			</div>
			<h1 class="text-2xl font-header">Who am I?</h1>
			<p class="text-lg font-body m-4">
				I'm a software developer who works primarily with Microsoft technologies.
				Feel free to reach out to me on either:
			</p>
			<div>
				<button class="btn bg bg-primary-content text-base-100">
					<i class="fa-brands fa-github-square text-xl"></i>
					Github
				</button>
				<button class="btn bg-primary-content text-base-100">
					<i class="fa-brands fa-linkedin text-xl"></i>
					LinkedIn
				</button>
			</div>
		</div>
		<div class="col-span-3">
			<div class="m-8 w-full">
				<div class="inline p-4 text-5xl bg-primary text-primary-content rounded font-header">Blog.</div>
			</div>
			<slot />
		</div>
	</div>
	</body>
</html>
